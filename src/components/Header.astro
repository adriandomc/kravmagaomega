<!--
  Menú hamburguesa funcional para Astro (sin React ni JSX):
  - Usa Alpine.js para el estado del menú en móviles.
  - Alpine.js funciona bien con Astro y Tailwind.
  - Solo se usa class, no className.
-->

<!-- Alpine.js CDN para manejo de estado -->
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>

<header class="bg-black text-white py-6 shadow">
  <div class="container mx-auto px-4">
    <!-- Logos y título centrados en móvil -->
    <div class="flex flex-col items-center md:flex-row md:items-center md:justify-between gap-2 md:gap-4">
      <div 
        class="flex items-center justify-center gap-4 w-full md:w-auto cursor-pointer"
        onclick="window.location='/'"
      >
        <img src="/img/logo_JKMM.jpg" alt="Logo Escuela" class="h-12 w-12 rounded-full border-2 border-white" />
        <h1 class="text-2xl text-red-600 font-bold tracking-wide text-center">Jiu Jitsu Krav Maga México</h1>
        <img src="/img/logo_AMJ.jpg" alt="Logo Escuela" class="h-12 w-12 rounded-full border-2 border-white" />
      </div>
      <!-- Menú hamburguesa solo en móvil -->
      <div x-data="{ open: false }" class="w-full flex flex-col items-center md:hidden mt-4">
        <button class="flex items-center gap-2 focus:outline-none" aria-label="Abrir menú" @click="open = !open">
          <svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/></svg>
          <span class="text-lg">Menú</span>
        </button>
        <nav x-show="open" @click.away="open = false" class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-90 flex flex-col items-center justify-center gap-8 text-2xl z-50 transition-all duration-300 md:hidden">
          <a href="/" class="hover:text-yellow-400" @click="open = false">Inicio</a>
          <a href="/importancia" class="hover:text-yellow-400" @click="open = false">Importancia de las Artes Marciales</a>
          <a href="#info" class="hover:text-yellow-400" @click="open = false">Quiénes somos</a>
          <a href="#clases" class="hover:text-yellow-400" @click="open = false">Clases</a>
          <a href="#galeria" class="hover:text-yellow-400" @click="open = false">Galería</a>
          <a href="#contacto" class="hover:text-yellow-400" @click="open = false">Contacto</a>
        </nav>
      </div>
      <!-- Menú normal en desktop -->
      <nav class="hidden md:flex gap-6 text-lg">
        <a href="/" class="hover:text-yellow-400">Inicio</a>
        <a href="/importancia" class="hover:text-yellow-400">Importancia de las Artes Marciales</a>
        <a href="#info" class="hover:text-yellow-400">Quiénes somos</a>
        <a href="#clases" class="hover:text-yellow-400">Clases</a>
        <a href="#galeria" class="hover:text-yellow-400">Galería</a>
        <a href="#contacto" class="hover:text-yellow-400">Contacto</a>
      </nav>
    </div>
  </div>
</header>
